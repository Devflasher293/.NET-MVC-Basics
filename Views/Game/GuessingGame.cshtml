@{
    ViewData["Title"] = "Guessing Game";
}

<h2>Guessing Game</h2>

<form asp-action="GuessingGame" method="post">
    <div>
        <label for="guess">Enter your guess:</label>
        <input type="number" id="guess" name="guess" required />
    </div>
    <button type="submit">Submit Guess</button>
</form>

<p>@ViewData["Message"]</p>

@if (ViewData["GuessCount"] != null)
{
    <p>Guess Count: @ViewData["GuessCount"]</p>
}
